<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>provastampadb</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>ContextInitializer</servlet-name>
        <servlet-class>servlet.ContextInitializer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>provastampadb</servlet-name>
        <servlet-class>servlet.provastampadb</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>servlet.login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ContextInitializer</servlet-name>
        <url-pattern>/ContextInitializer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>provastampadb</servlet-name>
        <url-pattern>/provastampadb</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <resource-ref>
        <res-ref-name>genealogytree</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <listener>
        <listener-class>
            servlet.ContextInitializer
        </listener-class>
    </listener>
</web-app>
